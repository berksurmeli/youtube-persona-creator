<h1>New Topic</h1>

<%= form_with model: @topic do |f| %>
  <div class="card">
    <p>
      <label>Persona</label><br>
      <%= f.collection_select :persona_id, @personas, :id, :name,
            { prompt: "Select persona" },
            { style: "padding: 6px; width: 100%;" } %>
    </p>

    <p>
      <label>Title</label><br>
      <%= f.text_field :title, style: "width: 100%; padding: 8px;" %>
    </p>

    <p>
      <label>Description (this goes to the LLM as the topic prompt)</label><br>
      <%= f.text_area :description, rows: 5, style: "width: 100%; padding: 8px;" %>
    </p>

    <%= f.submit "Create Topic", class: "btn btn-primary" %>
  </div>
<% end %>
